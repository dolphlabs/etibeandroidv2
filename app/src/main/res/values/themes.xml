<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EtibeAndroid" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Widget.Etibe.Button" parent="Widget.Material3.Button">
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Etibe.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Chip Styles -->
    <style name="Widget.Etibe.Chip.Choice" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_choice_bg</item>
        <item name="android:textColor">@color/chip_choice_text</item>
        <item name="chipStrokeColor">@color/border_secondary</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="chipMinHeight">40dp</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <style name="Widget.Etibe.Chip.Status" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipCornerRadius">16dp</item>
        <item name="android:textSize">12sp</item>
        <item name="chipMinHeight">28dp</item>
        <item name="chipIconVisible">false</item>
        <item name="closeIconVisible">false</item>
        <item name="android:clickable">false</item>
    </style>

    <!-- Bottom Sheet Dialog Theme -->
    <style name="BottomSheetDialogTheme" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Material3.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/BottomSheetShapeAppearance</item>
    </style>

    <style name="BottomSheetShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
</resources>