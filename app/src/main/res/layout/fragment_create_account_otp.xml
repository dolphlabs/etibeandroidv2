<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="44dp"
    android:background="@color/white"
    android:padding="12dp"
    tools:context=".auth.CreateAccountOtp">


    <!-- Back Arrow -->
    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Back"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/sf_pro_display_bold"
        android:text="We sent you a code"
        android:textColor="#414449"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backBtn" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/sf_pro_text_regular"
        android:text="A code has been sent to"
        android:textColor="#000815"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tvTitle"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/sf_pro_display_bold"
        android:text="gideonjones63@gmail.com"
        android:textColor="#000815"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tvTitle"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle" />


    <!-- Change Email -->
    <TextView
        android:id="@+id/tvChangeEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:fontFamily="@font/sf_pro_text_regular"
        android:text="Change Email"
        android:textColor="@color/primary_green"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/tvEmail"
        app:layout_constraintStart_toEndOf="@id/tvEmail"
        app:layout_constraintTop_toTopOf="@id/tvEmail" />


    <!-- OTP Input Boxes -->
    <EditText
        android:id="@+id/otp1"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/otp_box"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tvEmail"
        app:layout_constraintTop_toBottomOf="@id/tvChangeEmail" />

    <EditText
        android:id="@+id/otp2"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/otp_box"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/otp3"
        app:layout_constraintStart_toEndOf="@id/otp1"
        app:layout_constraintTop_toTopOf="@id/otp1" />

    <EditText
        android:id="@+id/otp3"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/otp_box"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/otp4"
        app:layout_constraintStart_toEndOf="@id/otp2"
        app:layout_constraintTop_toTopOf="@id/otp1" />

    <EditText
        android:id="@+id/otp4"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/otp_box"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/otp5"
        app:layout_constraintStart_toEndOf="@id/otp3"
        app:layout_constraintTop_toTopOf="@id/otp1" />

    <EditText
        android:id="@+id/otp5"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/otp_box"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/otp6"
        app:layout_constraintStart_toEndOf="@id/otp4"
        app:layout_constraintTop_toTopOf="@id/otp1" />

    <EditText
        android:id="@+id/otp6"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@drawable/otp_box"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/btnVerify"
        app:layout_constraintStart_toEndOf="@id/otp5"
        app:layout_constraintTop_toTopOf="@id/otp1" />

    <!-- Verify Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnVerify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:background="@drawable/bg_btn"
        android:text="Verify"
        android:textAllCaps="false"
        android:textSize="16sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:fontFamily="@font/sf_pro_text_regular"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/otp1" />

    <!-- Resend Code -->
    <!-- Resend + Timer -->
    <LinearLayout
        android:id="@+id/resendContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnVerify">

        <TextView
            android:id="@+id/resendText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_medium"
            android:text="Didnâ€™t get Code?"
            android:textColor="#262157"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvResend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/sf_pro_display_bold"
            android:text=" Resend OTP"
            android:textColor="@color/primary_green"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/sf_pro_display_bold"
            android:text=" (4:40)"
            android:textColor="@color/primary_green"
            android:textSize="14sp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
<FrameLayout
android:id="@+id/loadingOverlay"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#80000000"
android:clickable="true"
android:focusable="true"
android:visibility="gone">

<ProgressBar
    android:id="@+id/progress_bar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center" />
</FrameLayout>
    </FrameLayout>