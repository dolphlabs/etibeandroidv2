<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp"
        android:background="@color/white"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAFFFC"
            android:padding="24dp"
            tools:context=".etibe.fragment_create_etibe">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:contentDescription="Back"
                android:src="@drawable/ic_arrow_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/sf_pro_text_regular"
                android:text="Create Etibé"
                android:textColor="#1D293D"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/ivBack"
                app:layout_constraintStart_toEndOf="@id/ivBack"
                app:layout_constraintTop_toTopOf="@id/ivBack" />

            <!-- Group Details Section -->
            <TextView
                android:id="@+id/tvGroupDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/sf_pro_text_medium"
                android:text="Group Details"
                android:textColor="#1E293B"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitle" />

            <!-- Group Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilGroupName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvGroupDetails">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etGroupName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_input_bg"
                    android:fontFamily="@font/sf_pro_text_medium"
                    android:hint="Group Name"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textColorHint="#4A4A4A"
                    android:textSize="13sp" />
            </com.google.android.material.textfield.TextInputLayout>
            




            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvUploadLogo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tilGroupName">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/image_uploaded"
                        android:layout_width="88dp"
                        android:layout_height="88dp"
                        android:src="@drawable/ic_group_logo_placeholder" />

                    <TextView
                        android:id="@+id/btn_upload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/bg_auth_button"
                        android:fontFamily="@font/sf_pro_text_medium"
                        android:padding="12dp"
                        android:text="Upload Logo"
                        android:textColor="#008236"
                        android:textSize="14sp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvContributionSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/sf_pro_text_medium"
                android:text="Contribution Settings"
                android:textColor="#1E293B"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cvUploadLogo" />

            <!-- Amount -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilAmount"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvContributionSettings">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_input_bg"
                    android:fontFamily="@font/sf_pro_text_medium"
                    android:hint="Contribution Amount"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black"
                    android:textColorHint="#4A4A4A"
                    android:textSize="13sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvMinContribution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="E.g Minimum contribution: $100"
                android:textColor="#64748B"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tilAmount" />


            <!-- Currency (read-only for now) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilCurrency"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:endIconMode="none"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvMinContribution">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCurrency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_input_bg"
                    android:enabled="false"
                    android:fontFamily="@font/sf_pro_text_medium"
                    android:text="NEAR"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_color"
                    android:textSize="13sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Frequency -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilFrequency"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tilCurrency">

                <AutoCompleteTextView
                    android:id="@+id/etFrequency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_input_bg"
                    android:fontFamily="@font/sf_pro_text_medium"
                    android:hint="Frequency"
                    android:inputType="none"
                    android:textColor="@color/black"
                    android:textColorHint="#4A4A4A"
                    android:textSize="13sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilStartDate"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:hintAnimationEnabled="false"
                app:endIconDrawable="@drawable/ic_calendar"
                app:endIconMode="custom"
                app:hintEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tilFrequency">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etStartDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_input_bg"
                    android:fontFamily="@font/sf_pro_text_medium"
                    android:hint="Start Date"
                    android:inputType="none"
                    android:textColor="@color/black"
                    android:textColorHint="#4A4A4A"
                    android:textSize="13sp" />
            </com.google.android.material.textfield.TextInputLayout>



            <!-- Grace Period -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilGracePeriod"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tilStartDate">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etGracePeriod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_input_bg"
                    android:fontFamily="@font/sf_pro_text_medium"
                    android:hint="Grace Period (days) – e.g. 7"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="#4A4A4A"
                    android:textSize="13sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Members & Payouts -->
            <TextView
                android:id="@+id/tvMembersPayouts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/sf_pro_text_medium"
                android:text="Members &amp; Payouts"
                android:textColor="#1E293B"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tilGracePeriod" />

            <!-- Members Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilMembers"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvMembersPayouts">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMembers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_input_bg"
                    android:fontFamily="@font/sf_pro_text_medium"
                    android:hint="Enter names, e.g. John, Jane, Alex"
                    android:inputType="textMultiLine"
                    android:textColor="@color/black"
                    android:textColorHint="#4A4A4A"
                    android:textSize="13sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Member Count -->
            <TextView
                android:id="@+id/tvMemberCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/sf_pro_text_medium"
                android:text="0 members added (minimum 2 required)"
                android:textColor="#62748E"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tilMembers" />

            <!-- Payment Order -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPaymentOrder"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvMemberCount">

                <AutoCompleteTextView
                    android:id="@+id/etPaymentOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_input_bg"
                    android:fontFamily="@font/sf_pro_text_medium"
                    android:hint="Payment Order"
                    android:inputType="none"
                    android:textColor="@color/black"
                    android:textColorHint="#4A4A4A"
                    android:textSize="13sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Privacy -->
            <TextView
                android:id="@+id/tvPrivacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/sf_pro_display_bold"
                android:text="Privacy"
                android:textColor="#1E293B"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tilPaymentOrder" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvPrivacy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPrivacy">

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchPrivate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_switch_button"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:padding="16dp"
                    android:text="Private Group\nOnly invited members can join"
                    android:textSize="13sp" />
            </com.google.android.material.card.MaterialCardView>


            <!-- Create Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCreate"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/bg_btn"
                android:fontFamily="@font/sf_pro_text_regular"
                android:text="Create Etibé"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cvPrivacy" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>
</FrameLayout>